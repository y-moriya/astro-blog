---
import MainLayout from '../../layouts/MainLayout.astro';
import BlogPostSimple from '../../components/BlogPostSimple.astro';

export async function getStaticPaths({ }) {
  const allPosts = await Astro.glob('../posts/*.md');
  const allTags = new Set();
  allPosts.map(post => {
      post.frontmatter.tags && post.frontmatter.tags.map((tag: string) => allTags.add(tag))
  })

  return Array.from(allTags).map((tag) => {
    const filteredPosts = allPosts.filter((post) => post.frontmatter.tags.includes(tag))
    return {
      params: { tag },
      props: {
          page: filteredPosts
      }
    };
  });
}

const { page } = Astro.props
const { tag } = Astro.params
let title = `Posts by Tag: ${tag}`
let description = `all of the articles we've posted and linked so far under the tag: "${tag}"`

---
<MainLayout 
  title={title} description={description}>
    <h1 class="font-size-3">{title}</h1>
    {page.sort((a: any, b: any) => {
      return new Date(b.frontmatter.publishDate).valueOf() - new Date(a.frontmatter.publishDate).valueOf();
    }).map(({ url, frontmatter }: any) => (
    <BlogPostSimple
      title={frontmatter.title}
      publishDate={frontmatter.publishDate}
      url={url as string}
    />
    ))}
</MainLayout>