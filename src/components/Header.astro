---
const pages = {
	home: {
		url: '/',
		title: 'Home'
	},
	about: {
		url: '/about',
		title: 'About'
	},
	blog: {
		url: '/posts/1',
		title: 'Blog'
	},
	tags: {
		url: '/tags',
		title: 'Tags'
	},
	contact: {
		url: '/contact',
		title: 'Contact'
	}
};

const requestPathname = Astro.request.url;
---

<header role="banner" class="wrapper flex-container">
	<a href="/">
		<h1>Stoicism</h1>
	</a>
	<nav class="site-navigation" aria-label="Primary">
			<ul class="nav-list">
					{Object.values(pages).map(entry => {
							const className = requestPathname === entry.url && 'active';
							return (
									<li>
											<a class={className as string} href={entry.url}>{entry.title}</a>
									</li>
							)
					})}
			</ul>
	</nav>
</header>

<style>

	a {
		border-bottom: 2px solid transparent;
	}
	
	a.active {
		border-bottom-color: var(--color-active);
			color: var(--color-active);
			text-underline-offset: var(--nav-underline-offset);
			text-decoration-thickness: 20%;
	}
	</style>