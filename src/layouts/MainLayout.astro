---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro'

let { title, description, head } = Astro.props;
---
<html lang="ja">
	<head>
    {head}
		<BaseHead title={title} description={description} />
	</head>

	<body>
		<Header />
		<div class="wrapper">
      { title || description ? '<header><h1>{title}</h1><p>{description}</p></header>' : '' }
			<main class="content">
				<section id="main-content">
          <slot />
				</section>
			</main>
		</div>
	</body>
</html>

<style>
	.content {
		margin-top: 4rem;
		margin-bottom: 8rem;
	}

	.intro {
		padding-bottom: 4rem;
		margin-bottom: 2rem;
		border-bottom: 4px solid var(--theme-divider);
	}

	h1 {
		font-size: 2.5rem;
		font-weight: 700;
	}
</style>
